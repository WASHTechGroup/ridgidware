<p id="notice"><%= notice %></p>

<h1>Listing Orders</h1>

<% if @order %>
  <table>
    <thead>
      <tr>
        <th>Order #</th>
        <th>Date Placed</th>
        <th>Comments</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.order_no %></td>
          <td><%= order.created_at %></td>
          <td><%= order.comment %></td>
          <td><%= link_to 'Show', order, :class => "btn-small" %></td>
          <td><%= link_to 'Edit', edit_order_path(order), :class => "btn-small" %></td>
          <td><%= link_to 'Destroy', order, :class => "btn-small", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h2>No Orders</h2>
<% end %>

<br>

