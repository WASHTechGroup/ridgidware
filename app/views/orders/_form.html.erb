<input type="hidden" name="order_id" value="<%= @order.id %>">
<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :order_no %>
  <%= f.text_field :order_no %></br>
  <%= f.label :subtotal %>
  <%= f.text_field :subtotal %></br>
  <%= f.label :tax %>
  <%= f.text_field :tax %></br>
  <%= f.label :total %>
  <%= f.text_field :total %></br>
  <%= f.label :po_number, "PO \#" %>
  <%= f.text_field :po_number %></br>
  <%= f.label :comment %>
  <%= f.text_area :comment %></br>

  <%= f.label :parts_in_order %>
  <%= f.fields_for :parts_in_order do |builder| %>
    <%= render "parts_in_order_field", :f => builder %>
  <% end %>

  <%= link_to_add_fields "Add part", f, :parts_in_order %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>