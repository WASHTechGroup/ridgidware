<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :order_no %>
  <%= f.text_field :order_no %></br>
  <%= f.label :cost %>
  <%= f.text_field :cost %></br>
  <%= f.label :subtotal %>
  <%= f.text_field :subtotal %></br>
  <%= f.label :tax %>
  <%= f.text_field :tax %></br>
  <%= f.label :total %>
  <%= f.text_field :total %></br>
  <%= f.label :comment %>
  <%= f.text_area :comment %></br>

  <%= f.label :parts %>
  <%= fields_for :parts do |builder| %>
    <%= render "part_field", :f => builder %>
  <% end %>

  <p><%= link_to_add_fields "Add part", f, :parts %></p>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>