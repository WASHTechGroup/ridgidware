<div class="screen">
	<div class ="row">
		<div class="col-sm-4">
			<table class="finish centered">
					<tr>
						<td><button class = "btn1" onclick="goto('<%= daily_report_path(format: :pdf) %>')">Day Sales</button></td>
						<td><button class = "btn1" onclick="goto('<%= weekly_report_path(format: :pdf) %>')">Week Sales</button></td>
					</tr>	
					<tr>
						<td><button class = "btn1">Month Sales</button></td>
						<td><button class = "btn1">Quarter Sales</button></td>
					</tr>	
					<tr>
						<td><button class = "btn1">Annual Sales</button></td>
						<td><button class = "btn1">Audit</button></td>
					</tr>	
					<tr>
						<td><button class = "btn1">PO</button></td>
						<td><button class = "btn1" onclick="goto('<%= inventory_report_path(format: :pdf) %>')">Inventory</button></td>
					</tr>	
				</table>
		</div>
		<div class="col-sm-2">
			<table class="finish centered">
				<tr>
					<td><button class = "btn1" onclick="goto('<%= parts_path%>')">Manage Inventory</button></td>
				</tr>	
				<tr>
					<td><button class = "btn1" onclick="goto('<%= orders_path%>')">Manage Orders</button></td>
				</tr>
				<tr>
					<td><button class = "btn1" onclick="goto('<%= users_path%>')">Manage Users</button></td>
				</tr>
				<tr>
					<td><button class = "btn1" onclick="goto('<%= pos_path%>')">POS</button></td>
				</tr>
			</table>
		</div>
		<div class="col-sm-5">
			<div class="inventory_partial">
				<%=render "inventories/inventory"%>
			</div>
		</div>	
	</div>

	<div class="modal fade" id="dayModal" tabindex="-1" role="dialog" aria-labelledby="dayModal" aria-hidden="true">
			<div class="modal-dialog">
		    <div class="modal-content">
		        <div class="modal-header">
		        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button>
		        <h4 class="modal-title" id="myModalLabel">What Day?</h4>
		        </div>
		        <div class="modal-body">
		            <form>
		            	Quantity:<br>
					<input type="text" name="quantity" id = "quantity">
					<input type="hidden" name="part_id" id="part_id">
					<br>
		            </form>

		        </div>
		        <div class="modal-footer">
		            <button type="button" class="btn btn-default" data-dismiss="modal">Done</button>
			    </div>
		    </div>
		  </div>
		</div>
</div>