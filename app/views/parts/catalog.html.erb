<% form_tag catalog_path, :method => 'get' do %>
	<p>
		<%= text_field_tag :search, params[:search] %>
		<%= submit_tag "Search", :name => nil %>
	</p>
	<%= hidden_field_tag :direction, params[:direction] %>
	<%= hidden_field_tag :sort, params[:sort] %>
	<div class "catalog">
		<table>
			<!-- The header to the table -->
			<tr class = "borders">
				<th><%= sortable "part_number", "Part \#" %></th>
				<th><%= sortable "description", "Desc." %></th>
				<th><%= sortable "price", "Price" %></th>
			</tr>
			<!-- Itterate through the parts in the databae -->
			<% @parts.each do |part| %>
				<tr class = "borders">
					<td><%= part.part_number %></td>
					<td><%= part.description %></td>
					<td><%= part.price %></td>
				</tr>
			<% end %>
		</table>
		<%= will_paginate @parts%>
	</div>
<% end %>