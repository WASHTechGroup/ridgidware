<div class="container">
	<h1>Part #<%= @part.part_number %></h1>

	<table>
		<tr>
			<td><b>Part #.</b></td>
			<td><%= @part.part_number %></td>
		</tr>
		<tr>
			<td><b>Description</b></td>
			<td><%= @part.description %></td>
		</tr>
		<tr>
			<td><b>Category</b></td>
			<td><%= @part.category.name %></td>
		</tr>
		<tr>
			<td><b>Price</b></td>
			<td>$<%= @part.price %></td>
		</tr>
		<tr>
			<td><p><b>Inventory</b></p></td>
			<table>
				<thead>
					<tr>
						<th>On Hand</th>
						<th>On Order</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td><%= @part.inventory.on_hand %></td>
						<td><%= @part.inventory.on_order %></td>
					</tr>
				</tbody>
			</table>
		</tr>
	</table>

	<%= link_to 'Edit', edit_part_path(@part), class: "" %>
	<%= link_to 'Back', parts_path, class: "" %>
</div>
